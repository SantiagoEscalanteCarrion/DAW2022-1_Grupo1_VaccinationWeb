@model IEnumerable<Vacunas_ProyectoWeb_GRUPO01.MVC.Models.CentroVacunacion>

@{
    ViewData["Title"] = "Index";
}

<body style="background-image: linear-gradient(to bottom, turquoise, lightblue)">
    <h1 style="font-family: 'Agency FB'; font-size: 5vw">Listado de Centros de Vacunación</h1>

    <p>
        <a asp-action="Create">Añadir Centro de Vacunación</a>
    </p>
    <table style="text-align: center"class="table table-dark table-hover table-striped table-bordered border-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Distrito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distrito)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</body>


